

<article class="panel is-primary">
  <p class="panel-heading">
    Add a Burger
  </p>
  <div class="panel-block">
    <form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="burger_name">
  </div>

  <button class="button is-danger" type="submit">Add Burger!</button>
</form>
  </div>
</article>


<article class="panel is-primary">
  <p class="panel-heading">
    Burgers Available for Devouration
  </p>
  <div class="panel-block">
    <ul>
      {{#each burger}}
      {{#unless devoured}}
      {{> burgers/burger-block}}
      {{/unless}}
      {{/each}}

    </ul>
  </div>
</article>

<article class="panel is-danger">
  <p class="panel-heading">
    Devoured Burgers
  </p>
  <div class="panel-block">
    <ul>
      {{#each burger}}
      {{#if devoured}}
      {{> burgers/burger-block}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</article>